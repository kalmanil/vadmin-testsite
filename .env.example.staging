# VAdmin Testsite - Staging Environment
# Copy this file to .env.staging

# Application Identity
APP_NAME="VAdmin Testsite (Staging)"
APP_ENV=staging
APP_KEY=
APP_DEBUG=true
APP_URL=https://staging.vadmin-testsite.com

# Staging Database (MySQL recommended)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=vadmin_testsite_staging
DB_USERNAME=vadmin_staging_user
DB_PASSWORD=secure_staging_password
DB_PREFIX=vadmin_staging_

# Staging Cache
CACHE_PREFIX=vadmin_staging_
CACHE_STORE=redis
CACHE_TTL=1800

# Staging Session
SESSION_NAME=vadmin_staging_session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true

# Staging Logging
LOG_CHANNEL=vadmin_staging_logs
LOG_LEVEL=info
LOG_FILE=storage/logs/vadmin-staging.log

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_PREFIX=vadmin_staging_

# Redis Configuration
REDIS_HOST=localhost
REDIS_PASSWORD=redis_staging_password
REDIS_PORT=6379
REDIS_DB=1

# Mail Configuration (staging mail service)
MAIL_MAILER=smtp
MAIL_HOST=mail.staging.vadmin-testsite.com
MAIL_PORT=587
MAIL_USERNAME=staging@vadmin-testsite.com
MAIL_PASSWORD=staging_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="staging@vadmin-testsite.com"
MAIL_FROM_NAME="VAdmin Testsite (Staging)"

# React/Vite Configuration
VITE_APP_NAME="VAdmin Testsite (Staging)"
VITE_APP_URL="https://staging.vadmin-testsite.com"
VITE_API_BASE_URL="https://staging.vadmin-testsite.com/api"

# Security
BCRYPT_ROUNDS=12

# Feature Flags
FEATURE_REACT_DASHBOARD=true
FEATURE_API_ENABLED=true
FEATURE_ANALYTICS=true
FEATURE_DEBUG_TOOLBAR=false

