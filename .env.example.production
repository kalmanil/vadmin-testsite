# VAdmin Testsite - Production Environment
# Copy this file to .env.prod

# Application Identity
APP_NAME="VAdmin Testsite"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://vadmin-testsite.com

# Production Database (MySQL)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=vadmin_testsite_production
DB_USERNAME=vadmin_prod_user
DB_PASSWORD=secure_production_password
DB_PREFIX=vadmin_prod_

# Production Cache
CACHE_PREFIX=vadmin_prod_
CACHE_STORE=redis
CACHE_TTL=3600

# Production Session
SESSION_NAME=vadmin_prod_session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true

# Production Logging
LOG_CHANNEL=vadmin_prod_logs
LOG_LEVEL=error
LOG_FILE=storage/logs/vadmin-production.log

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_PREFIX=vadmin_prod_

# Redis Configuration
REDIS_HOST=localhost
REDIS_PASSWORD=redis_production_password
REDIS_PORT=6379
REDIS_DB=2

# Mail Configuration (production mail service)
MAIL_MAILER=smtp
MAIL_HOST=mail.vadmin-testsite.com
MAIL_PORT=587
MAIL_USERNAME=noreply@vadmin-testsite.com
MAIL_PASSWORD=production_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@vadmin-testsite.com"
MAIL_FROM_NAME="VAdmin Testsite"

# React/Vite Configuration
VITE_APP_NAME="VAdmin Testsite"
VITE_APP_URL="https://vadmin-testsite.com"
VITE_API_BASE_URL="https://vadmin-testsite.com/api"

# Security (strict for production)
BCRYPT_ROUNDS=12

# Feature Flags
FEATURE_REACT_DASHBOARD=true
FEATURE_API_ENABLED=true
FEATURE_ANALYTICS=true
FEATURE_DEBUG_TOOLBAR=false

