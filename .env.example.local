# VAdmin Testsite - Local Development Environment
# Copy this file to .env.local

# Application Identity
APP_NAME="VAdmin Testsite (Local)"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8001

# Local Database
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite
DB_PREFIX=vadmin_local_

# Local Cache (faster for development)
CACHE_PREFIX=vadmin_local_
CACHE_STORE=file
CACHE_TTL=60

# Local Session
SESSION_NAME=vadmin_local_session
SESSION_DRIVER=file
SESSION_LIFETIME=480
SESSION_ENCRYPT=false

# Local Logging (verbose)
LOG_CHANNEL=vadmin_local_logs
LOG_LEVEL=debug
LOG_FILE=storage/logs/vadmin-local.log

# Queue Configuration (sync for local)
QUEUE_CONNECTION=sync
QUEUE_PREFIX=vadmin_local_

# Mail Configuration (log for local)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="local@vadmin-testsite.com"
MAIL_FROM_NAME="VAdmin Testsite (Local)"

# React/Vite Configuration (development)
VITE_APP_NAME="VAdmin Testsite (Local)"
VITE_APP_URL="http://localhost:8001"
VITE_API_BASE_URL="http://localhost:8001/api"
VITE_DEV_SERVER_URL="http://localhost:5178"

# Security (relaxed for local)
BCRYPT_ROUNDS=4

# Feature Flags (all enabled for local)
FEATURE_REACT_DASHBOARD=true
FEATURE_API_ENABLED=true
FEATURE_ANALYTICS=true
FEATURE_DEBUG_TOOLBAR=true

