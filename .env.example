# VAdmin Testsite - Application Configuration
# Copy this file to .env and configure for your environment

# Application Identity
APP_NAME="VAdmin Testsite"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8001

# App-specific Database
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite
DB_PREFIX=vadmin_

# App-specific Cache
CACHE_PREFIX=vadmin_
CACHE_STORE=database
CACHE_TTL=3600

# App-specific Session
SESSION_NAME=vadmin_session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# App-specific Logging
LOG_CHANNEL=vadmin_logs
LOG_LEVEL=debug
LOG_FILE=storage/logs/vadmin.log

# Queue Configuration
QUEUE_CONNECTION=database
QUEUE_PREFIX=vadmin_

# Mail Configuration
MAIL_MAILER=log
MAIL_FROM_ADDRESS="admin@vadmin-testsite.com"
MAIL_FROM_NAME="VAdmin Testsite"

# React/Vite Configuration
VITE_APP_NAME="VAdmin Testsite"
VITE_APP_URL="${APP_URL}"
VITE_API_BASE_URL="${APP_URL}/api"

# Security
BCRYPT_ROUNDS=12

# Feature Flags
FEATURE_REACT_DASHBOARD=true
FEATURE_API_ENABLED=true
FEATURE_ANALYTICS=false